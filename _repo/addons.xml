<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.luckytvwizard" name="[COLOR gold]LuckyTV [COLOR blue]Wizard[/COLOR]" version="1.1" provider-name="[B][I][COLOR blue]LuckyTV[/COLOR][/I][/B]">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>program executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Installer for [COLOR gold]LuckyTv Builds[/COLOR] Builds</summary>
    <description lang="en">This Wizard allows you to install the latest version of Kodi San Antonio builds from [B][COLOR cyan]LuckyTV[/COLOR][/B].  It also provides Maintenance, Tools and Tweaks sections to help you keep your Media Center running as smoothly as possible.</description>
    <disclaimer lang="en">For support, follow me on Twitter at:  [B][COLOR blue]@Lucky77_TV[/COLOR][/B]</disclaimer>
    <platform>all</platform>
	<license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
  </extension>
</addon>

<addon id="repository.luckytv" name="[COLOR blue]LuckyTv Addon Repo[/COLOR]" version="0.1.1" provider-name="LuckyTv">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="[COLOR blue]LuckyTv Addon Repo[/COLOR]">
		<dir>
            <info compressed="false">https://raw.githubusercontent.com/luckytv/luckytv/master/_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/luckytv/luckytv/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/luckytv/luckytv/master/_repo/</datadir>
		</dir>
		<dir>
			<info compressed="false">http://raw.githubusercontent.com/frenchdj/frenchdj.repository/master/addons.xml</info>
			<checksum>http://raw.githubusercontent.com/frenchdj/frenchdj.repository/master/addons.xml.md5</checksum>
			<datadir zip="true">http://raw.githubusercontent.com/frenchdj/frenchdj.repository/master/repo/</datadir>
		</dir>
		<dir>
			<info compressed="false">https://raw.githubusercontent.com/totalrevolution/python-koding/master/zips/addons.xml</info>
			<checksum>https://raw.githubusercontent.com/totalrevolution/python-koding/master/zips/addons.xml.md5</checksum>
			<datadir zip="true">https://raw.githubusercontent.com/totalrevolution/python-koding/master/zips/</datadir>
		</dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>LuckyTv Repository to Install Lucky Tv Builds and Apks</summary>
            <description>LuckyTv Repo</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
